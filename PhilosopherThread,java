public class PhilosopherThread implements Runnable {

    public void run() {
        System.out.println("This code is running in a thread");
        int index = Thread.currentThread().getName().parseInt();
        do {
            if (philosophers[index] == "THINKING") {
                System.out.println("Philosopher " + index + " is thinking.");
                Random rand = new Random();
                randomNum = (1 + rand.nextInt((10 - 1) + 1)) * 1000;
                Thread.sleep(randomNum);
            }

            dp.pickup(index, philosophers)
            System.out.println("Philosopher " + index + " is eating.")
            dp.putdown(index, philosophers)
        } while(true);
    }
}